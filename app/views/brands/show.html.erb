<%- model_class = @brand.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @brand.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_ids) %>:</strong></dt>
  <dd><%= @brand.category_ids %></dd>
</dl>

<h3>Products</h3>

<% @brand.products.each do |p| %>
  <p><%= link_to p.title, product_path(p) %></p>
<%end%>


<%= link_to "New product", new_product_path(:brand_id => @brand.id), class: "btn" %>





<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              brands_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_brand_path(@brand), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              brand_path(@brand),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>
</div>
